<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Todo list
        link(rel="stylesheet", href="css/app.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css")
    body
        section.section
            h1.title Task for today
           
            form( data-js='newTaskForm')
                .field.has-addons.has-addons-centered
                    .control
                        input.input.is-info(type="text", name="newTask" placeholder='Enter a new task')
                    .control
                        input.button.is-info(type="submit", value="Add Task")
            .columns
                .column
                    h2.title Task to do
                    ul(data-js='display-task') 
                        each task,index in tasks 
                            if !task.done
                                li(id=task.timeStamp data-status=`${task.done}`)= task.name
                                    input.delete( type="checkbox" name="done" checked=task.done)
                .column
                    h3.title Completed Tasks
                    ul(data-js='done-task')
                        each task,index in tasks 
                            if task.done
                                li(id=task.timeStamp data-status=`${task.done}`)= task.name
                                    input.delete(type="checkbox", name="done" checked=task.done)
        script(src="js/index.js")