<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Todo list
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css")
        link(rel="stylesheet", href="css/app.css")
    body
        section.hero.is-primary.is-bold.is-fullheight
            .container
                h1.title Task for today      
                .columns.is-gapless.task--container
                    .btn--open__modal
                        button.open--modal 
                            span   &#43;
                    .column.is-4
                        .task--not-completed 
                            h2.subtitle.has-text-primary.has-text-centered.has-text-weight-bold TASK LIST
                            ul.has-text-dark(data-js='display-task') 
                                each task,index in tasks 
                                    if !task.done
                                        li.task--item(id=task.timeStamp data-status=`${task.done}`)= task.name
                                            input.delete( type="checkbox" name="done" checked=task.done)
                    .column
                        .task--completed
                            h3.subtitle.has-text-primary.has-text-centered.has-text-weight-bold COMPLETED TASK
                            ul(type='1').has-text-dark(data-js='done-task')
                                each task,index in tasks 
                                    if task.done
                                        li.task--item(id=task.timeStamp data-status=`${task.done}`)= task.name
                                            input.delete.is-medium(type="checkbox", name="done" checked=task.done)
        .modal
                .modal-background
                .modal-content
                    form( data-js='newTaskForm')
                        .field.has-addons.has-addons-centered
                            .control
                                input.input.is-info(type="text", name="newTask" placeholder='Enter a new task')
                            .control
                                input.button.is-info(type="submit", value="Add Task")
                button.modal-close.is-large(arial-label='close')         
        script(src="js/index.js")